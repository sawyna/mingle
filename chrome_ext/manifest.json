{
    "name": "Mingle",
    "version": "2.3",
    "description": "Have fun watching movies and tv shows remotely with your friends and loved ones!",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.bundle.js"
        ],
        "persistent": false
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.google-analytics.com; object-src 'self'",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/*", 
                "https://*.netflix.com/*", 
                "https://*.primevideo.com/*", 
                "https://*.amazon.com/*", 
                "https://*.twitch.tv/*",
                "https://*.disneyplus.com/*"
            ],
            "all_frames": true,
            "js": ["content_scripts.bundle.js"]
        }
    ],
    "web_accessible_resources": ["mingle_scripts.bundle.js"],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/sync.png",
            "24": "images/sync24.png",
            "32": "images/sync32.png"
        }
    },
    "icons": {
        "16": "images/sync.png",
        "128": "images/sync128.png"
    }
}
