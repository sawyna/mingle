{
    "name": "Mingle",
    "version": "1.2",
    "description": "Mingle with your friends!",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.bundle.js"
        ],
        "persistent": false
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": [
        "tabs",
        "activeTab",
        "http://localhost:5000/*",
        "http://*/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://*.youtube.com/*", "https://*.netflix.com/*", "https://*.primevideo.com/*", "https://*.amazon.com/*", "https://*.kissanime.ru/*", "https://*.twitch.tv/*"],
            "all_frames": true,
            "js": ["content_scripts.bundle.js"]
        }
    ],
    "web_accessible_resources": ["mingle_scripts.bundle.js"],
    "browser_action": {
        "default_popup": "popup.html"
    }
}